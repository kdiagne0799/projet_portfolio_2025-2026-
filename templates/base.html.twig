<script>
  const themes = [
    "#ffffff",   // blanc
    "#fff9c4",   // jaune
    "#ffe0b2",   // orange
    "#f8bbd0",   // rose
    "#f0b465ff",   // rouge
    "#e1bee7",   // mauve
    "#bbdefb",   // bleu clair
    "#62a965ff",   // 
    "#dbd4906b",   //
    "#eeeeeeff",   // gris
    "linear-gradient(135deg, #d11212ff, #ff9900, #e0e01bff, #1bdb1bff, #2828c1ff, #8719d0ff)" // multicolore
  ];

  let indexTheme = 0;

  document.addEventListener("DOMContentLoaded", function () {
    const button = document.getElementById("themeButton");
    button.addEventListener("click", function () {
      const theme = themes[indexTheme];
      document.body.style.background = theme;
      document.body.style.color = (theme === "#000000" || theme === "#1e3a5f") ? "#f0f0f0" : "#1f1f24";
      indexTheme = (indexTheme + 1) % themes.length;
    });
  });
</script>
