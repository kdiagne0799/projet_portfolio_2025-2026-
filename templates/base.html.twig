<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫</text></svg>">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body class="theme-clair" style="font-family: 'Roboto', sans-serif; margin:0; padding:0;">

<!-- Carte Welcome -->
<div id="profil-card" style="padding:30px; border-radius:15px; margin:20px auto; max-width:900px; background-color:#a8e6cf; color:#212121; box-shadow:0 8px 20px rgba(0,0,0,0.2);">
    <h2>Welcome / Bienvenue — I’m Khadim Diagne, a passionate student in Networks & Cybersecurity. Let’s build something great together.</h2>
    <p>Ready to contribute. Eager to learn. Open to opportunities in tech and security.</p>
</div>

<div style="display:flex; gap:15px; justify-content:center; margin:20px 0; font-family:Roboto, sans-serif;">

  <a href="{{ path('accueil') }}"
     style="padding:12px 25px; border-radius:15px; text-decoration:none; color:#212121; background-color:#00ffc8; box-shadow:0 5px 15px rgba(0,0,0,0.3); transition:0.3s; font-weight:bold;">
    Accueil
  </a>

  <a href="{{ path('a_propos') }}"
     style="padding:12px 25px; border-radius:15px; text-decoration:none; color:#00ffc8; background-color:#212121; box-shadow:0 5px 15px rgba(0,0,0,0.3); transition:0.3s; font-weight:bold;">
    À propos
  </a>

  <a href="{{ path('services') }}"
     style="padding:12px 25px; border-radius:15px; text-decoration:none; color:#00ffc8; background-color:#212121; box-shadow:0 5px 15px rgba(0,0,0,0.3); transition:0.3s; font-weight:bold;">
    Services
  </a>

  <a href="{{ path('contact') }}"
     style="padding:12px 25px; border-radius:15px; text-decoration:none; color:#00ffc8; background-color:#212121; box-shadow:0 5px 15px rgba(0,0,0,0.3); transition:0.3s; font-weight:bold;">
    Contact
  </a>

</div>

<style>
div a:hover {
  background-color: #00ffc8;
  color: #212121;
  transform: translateY(-5px) scale(1.05);
}
</style>


<!-- Contenu principal -->
<main style="padding:20px;">
    {% block body %}{% endblock %}
</main>



<!-- Script pour changer le thème de toute la page -->
<script>
const themes = [
    "#ffffff",
    "#f0f8ff79",
    "#ffe0b2",
    "#f8bbd0",
    "#a8e6cf",
    "#e1bee7",
    "#bbdefb",
    "#f1f189ff",
    "#eeeeeeff",
    "linear-gradient(135deg, #d11212ff, #ff9900, #e0e01bff, #1bdb1bff, #2828c1ff, #8719d0ff)"
];
let indexTheme = 0;

function appliquerTheme(theme) {
    document.body.style.background = theme;
    document.body.style.color = (theme === "#000000" || theme === "#1e3a5f") ? "#f0f0f0" : "#1f1f24";
}

document.addEventListener("DOMContentLoaded", function () {
    const button = document.getElementById("themeButton");
    button.addEventListener("click", () => {
        const theme = themes[indexTheme];
        appliquerTheme(theme);
        indexTheme = (indexTheme + 1) % themes.length;
    });
});
</script>

</body>
</html>